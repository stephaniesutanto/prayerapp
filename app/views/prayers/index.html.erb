<h3>Hello, <%= current_user.name %></h3>

<h3>Prayers for <%= @group.groupname %></h3>
<p></p>
<%= link_to 'Add New Prayer', new_prayer_path, :class => "btn btn-primary" %>
<p></p>


<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Date Posted</th>
      <th>Title</th>
      <th>Lister</th>
      <th>Description</th>
      <th>Answered Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @prayers.each do |prayer| %>
      <tr>
        <td><%= prayer.created_at.strftime("%B %d %Y, %l:%M%P") %></td>
        <td><%= prayer.name %></td>
        <td><%= prayer.user.name %></td>
        <td><%= prayer.description %></td>
        <td>
          <% if prayer.status? %>
          <%= 'Yes' %>
          <% else %>
          <%= 'Not yet' %>
          <% end %>
        </td>
        <td>
          <% if prayer.user.name == current_user.name %>
            <%= link_to 'Edit', edit_prayer_path(prayer) %>
            <%= link_to 'Delete', my_prayers_prayers_path, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% else %>
            <%= link_to 'Show', prayer %>
            <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
<% else %>
  <%= link_to('Login', new_user_session_path)  %>  
<% end %>

