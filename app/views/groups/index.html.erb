<h3>Hello, <%= current_user.name %></h3>

<h3>All Groups</h3>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Date Posted</th>
      <th>Group Name</th>
      <th>Group Owner</th>
      <th>Group Users</th>
      <th>Prayers</th>
      <th colspan="1">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.created_at.strftime("%B %d %Y, %l:%M%P") %></td>
        <td><%= group.groupname %></td>
        <td><%= group.user.try(:name) %></td>
        <td><%= group.users.collect(&:name).join(', ') %></td>
        <td>
          <%= link_to 'View', group_prayers_path(group.id) %>
        </td>
        <td>
            <%= link_to 'Join', join_group_path(group) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

