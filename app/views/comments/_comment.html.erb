<% @comments.each do |comment| %>
 <p><strong><%= comment.user.name %></strong></p>
 <p><%= comment.content %></p>
 <% if current_user == comment.user %>
 	<%= link_to "Delete comment", [comment.prayer, comment], method: :delete %>
 	<%= link_to "Edit comment", edit_prayer_comment_path(comment.prayer, comment) %>
 <% end %>
<% end %>

<%= render 'comments/form' %>